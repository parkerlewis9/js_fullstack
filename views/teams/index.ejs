<% include ../partials/header %>


<div id="navagate-index">

	<% if (isLoggedIn) {%>
		<a href="/logout">Logout</a>
	<% } else { %>
		<a href="/">Home</a>
		<!-- <a href="/login">Login</a> -->
		<a href="/signup">Signup</a>
		<a href="/login">Login</a>
	<% } %>


</div>
<div id="topbar-index">
		
	<div id="insidetopbar-index">

		
		<!-- <p>Welcome to The League</p> -->
		<h1>The League</h1>
		
		<% if (isLoggedIn) {%>
			<form action="/teams/new"><input type="submit" value="Add a New Team to the League"></form>
		<% } %>

		<h3>Check out your competition:</h3>


	</div>

	


</div>

<div id="maindiv-teams">


		<table class="table table-hover">
			<thead>
				<tr>
					<th>Team Logo</th>
					<th>Team Name</th>
				</tr>
			</thead>
			<tbody>
				<% teams.forEach(function(team) { %>
					<tr>
						<td><img src="<%= team.imageUrl %>" alt="Team Logo" height=100 width=150></td>
						<td><a href="/teams/<%= team.id %>"><%= team.name %></a></td>
					</tr>
					<%	})%>	


			</tbody>



		</table>
	


</div>



<% include ../partials/footer %>